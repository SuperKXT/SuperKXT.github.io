---
import logo from "../../public/logo.svg";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Saad Khan">
  <main>
    <img src={logo.src} />
    <ul>
      <a href="https://github.com/SuperKXT">Github</a>
      <li><a href="https://linkedin.com/in/SuperKXT">LinkedIn</a></li>
      <li><a href="https://bsky.app/profile/superkxt.com">BlueSky</a></li>
    </ul>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 16px;
    align-items: center;
    width: 100%;
    height: 100vh;
    font-size: 20px;
    line-height: 1.6;
  }

  ul {
    display: flex;
    gap: 16px;
    list-style: none;
    padding: 0;
    font-size: 0.9em;
    font-weight: 900;
    animation: showLinks 4s ease-in-out;
  }
  @keyframes showLinks {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    75% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0px);
    }
  }
  a {
    text-decoration-thickness: 3px;
    text-decoration-skip-ink: auto;
    color: var(--text-color);
    text-decoration-thickness: 3px;
    text-decoration-inset: 4px;
    text-underline-offset: 3px;
    transition: color 0.2s linear;
  }
  a:hover,
  a:active,
  a:focus {
    text-underline-offset: 5px;
  }
  a:visited {
    color: var(--highlight-fg);
  }
  a:focus-visible {
    outline-offset: 2px;
    outline-width: 3px;
    outline-style: solid;
    outline-color: inherit;
  }
  img {
    display: block;
    width: 250px;
  }
</style>
